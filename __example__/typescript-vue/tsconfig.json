{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true
    },
    "lib": ["esnext"],
    "include": ["**/*.ts", "**/*.tsx", "**/*.vue"],
    "exclude": ["node_modules"]
}